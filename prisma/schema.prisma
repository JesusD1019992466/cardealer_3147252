generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model marcas {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  //realacion uno a muchos
  carros carros[]
}

model carros {
  id        Int      @id @default(autoincrement())
  modelo    String 
  fecha_fabricacion DateTime
  disponible Boolean  @default(true)
  precio   Decimal 
  //atributo de clave foranea
  marcaId  Int
  //relacion muchos a uno
  marca marcas @relation (fields: [marcaId], references: [id])
}

model gerente {
  id     Int    @id @default(autoincrement())
  nombre String
}